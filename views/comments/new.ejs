<%- include ('../partials/header') %>

<div class="container">
  <div>
    <h1 style="text-align: center;"><b>Add new comments to <%= campground.name %></b></h1>
  </div>
  <div style="margin: 0 auto; width: 30%; ">
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="comment[author]" placeholder="Your Name">
      </div>
      <div class="form-group">
        <textarea class="form-control" name="comment[text]" placeholder="Your Comment Goes Here"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-md btn-success btn-block">Submit</button>
      </div>
    </form>
    <p>
      <a class="btn btn-outline-secondary mr-2" href="/campgrounds">Go Back</a>
    </p>
  </div>
</div>

<%- include ('../partials/footer') %>