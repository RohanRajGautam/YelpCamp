<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous" />
  <link rel="stylesheet" href="/stylesheet/main.css" />
  <title>YelpCamp | RRG</title>
</head>

<body>
  <nav class="navbar navbar-expand-sm navbar-light bg-light">
    <a class="navbar-brand" href="/">YelpCamp</a>
    <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#collapsibleNavId"
      aria-controls="collapsibleNavId" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavId">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>"><a
            class="nav-link" href="/campgrounds">Home</a></li>
      </ul>
      <ul class="navbar-nav navbar-right">
        <% if(!currentUser){ %>
        <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %> nav-item">
          <a href="/login" class="nav-link">Login</a>
        </li>
        <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %> nav-item">
          <a href="/register" class="nav-link">Sign Up</a>
        </li>
        <% }else{ %>
        <li class="nav-item">
          <a href="/campgrounds" class="nav-link">Hello, <%= currentUser.username %></a>
        </li>
        <li class="nav-item">
          <a href="/logout" class="nav-link">Log out</a>
        </li>
        <% } %>
      </ul>
    </div>
  </nav>

  <div class="container">
    <% if(error && error.length > 0) { %>
    <div class="alert alert-danger" role="alert"><%= error %></div>
    <% } %>
    <% if(success && success.length > 0) { %>
    <div class="alert alert-success" role="alert"><%= success %></div>
    <% } %>
  </div>

  <div class="container">