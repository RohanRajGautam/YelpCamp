<%- include ('../partials/header') %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <div class="list-group-item active">Info 1</div>
        <div class="list-group-item">Info 2</div>
        <div class="list-group-item">Info 3</div>
      </div>
    </div>
    <div class="col-md-9">
      <figure class="figure">
        <img src="<%= campground.image %>" class="figure-img img-fluid rounded" alt="<%= campground.name %>">
        <h4 class="float-right">$9.00/nights</h4>
        <h4><a href="#"><%= campground.name %></a></h4>
        <p><%= campground.description %></p>
      </figure>
      <div class="card card-body bg-light">
        <div class="text-right">
          <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
        </div>
        <hr>
        <% campground.comments.forEach((comment)=>{ %>
        <div class="row">
          <div class="col-md-12">
            <strong><%= comment.author %></strong>
            <span class="float-right">10 days ago</span>
            <p><%= comment.text %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>



<%- include ('../partials/footer') %>